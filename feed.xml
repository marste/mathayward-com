---
layout: none
---
<?xml version="1.0" encoding="UTF-8" ?>
    <feed xmlns="http://www.w3.org/2005/Atom" xml:lang="en">
        <title>{{ site.name }}</title>
        <subtitle/>
        <icon>
           {{site.baseurl}}/static/images/icons/favicon.png
        </icon>
        <updated>2013-09-19T18:07:00+00:00</updated>
        <id>{{site.baseurl}}/feed.xml</id>
        <link type="text/html" href="{{site.baseurl}}" rel="alternate"/>
    {% for post in site.posts %}
        {% if post.type != 'tweet' %}
        <entry>
            <title>{{ post.title }}</title>
            <content type="html">
                <![CDATA[
                    <img src="{{site.baseurl}}/static/images/{{ post.share-img }}" alt="{{ post.title }}" />
                    {{ post.content | markdownify }}
                    <a href="{{site.baseurl}}{{ post.url }}">Read on</a>
                ]]>
            </content>
            <link href="{{site.baseurl}}{{ post.url }}" type="text/html" rel="alternate" />
            <id>{{site.baseurl}}{ post.url }}</id>
            <author>
                <name>{{site.author}}</name>
            </author>
            <published>{{ post.pub-time }}:00+00:00</published>
        </entry>
        {% endif %}
    {% endfor %}
    </feed>