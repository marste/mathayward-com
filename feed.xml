---
layout: none
---
<?xml version="1.0" encoding="UTF-8" ?>
    <feed xmlns="http://www.w3.org/2005/Atom" xml:lang="en">
        <title>{{ site.name }}</title>
        <subtitle/>
        <icon>
            http://http://www.mathayward.com/static/images/icons/favicon.png
        </icon>
        <updated>2013-09-19T18:07:00+00:00</updated>
        <id>http://www.mathayward.com/feed.xml</id>
        <link type="text/html" href="http://www.mathayward.com/" rel="alternate"/>
    {% for post in site.posts %}
        {% if post.type == 'tweet' %}
        <entry>
            <title>Tweet</title>
            <content type="html">
                <![CDATA[{{ post.content }}
                <a href="{{ post.url-out }}">View on Twitter</a>]]>
            </content>
            <link href="{{ post.url-out }}" type="text/html" rel="alternate"/>
            <id>{{ post.url-out }}</id>
            <author>
                <name>Mat Hayward</name>
            </author>
            <published>{{ post.pub-time }}:00+00:00</published>
        </entry>
        {% else %}
        <entry>
            <title>{{ post.title }}</title>
            <content type="html">
                <![CDATA[
                    <img src="http://mathayward.com/static/images/{{ post.share-img }}" alt="{{ post.title }}" />
                    {{ post.content | markdownify }}
                    <a href="http://mathayward.com/{{ post.url }}">Read on</a>
                ]]>
            </content>
            <link href="http://mathayward.com/{{ post.url }}" type="text/html" rel="alternate" />
            <id>http://mathayward.com/{{ post.url }}</id>
            <author>
                <name>Mat Hayward</name>
            </author>
            <published>{{ post.pub-time }}:00+00:00</published>
        </entry>
        {% endif %}
    {% endfor %}
    </feed>